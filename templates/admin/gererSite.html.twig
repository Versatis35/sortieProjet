{% extends 'base.html.twig' %}

{% block title %} Gérer les sites {% endblock %}

{% block body %}

    <div class="container">
        <br><h1 style="text-align: center">Gérer les sites</h1><hr>
    </div><br>

    <h3>Filtrer les sites</h3>
    <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="ex : ENI" aria-label="Recipient's username" aria-describedby="basic-addon2">
        <div class="input-group-append">
            <button class="btn btn-outline-primary" type="button">Rechercher</button>
        </div>
    </div>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Site</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for place in places %}
            <tr>
                <td> {{ place.nom }}</td>
                <!--<td><button id="btnModifier" class="btn btn-info">Modifier</button> <a href="{{ path('delete_site', {id:place.id}) }}" role="button" id="btnDelete" class="btn btn-danger">Supprimer</a></td>-->
                <td><a href="{{ path('modify_site', {id:place.id}) }}" role="button" id="btnModify" class="btn btn-info">Modifier</a> <a href="{{ path('delete_site', {id:place.id}) }}" role="button" id="btnDelete" class="btn btn-danger">Supprimer</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <br><h3>Ajouter un site</h3>
    <div>
        {{ form(addPlaceForm) }}
    </div>

{% endblock %}

