{% extends 'base.html.twig' %}

{%  block title %} Se connecter {%  endblock %}

{% block body %}
    <form method="post">
        <section class="vh-100">
            <div class="container py-5 h-100">
                <div class="row d-flex align-items-center justify-content-center h-100">
                    <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                        <h1>Connectez-vous !</h1>
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <form>
                            <!-- Identifiant -->
                            <div class="form-outline mb-4">
                                <input type="text" value="{{ last_username }}" id="identifiantConnexion" autocomplete="email" required autofocus name="email"  class="form-control form-control-lg" />
                                <label class="form-label" for="identifiantConnexion">Identifiant</label>
                            </div>

                            <!-- MDP -->
                            <div class="form-outline mb-4">
                                <input type="password" name="password" autocomplete="current-password" required id="mdp" class="form-control form-control-lg" />
                                <label class="form-label" for="mdp">Mot de passe</label>
                            </div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            <div class="d-flex justify-content-around align-items-center mb-4">
                                <!-- Checkbox -->
                                <div class="form-check">
                                    <input
                                            class="form-check-input"
                                            type="checkbox"
                                            value=""
                                            id="rememberMe"
                                            name="_remember_me"
                                            checked
                                    />
                                    <label class="form-check-label" for="form1Example3"> Se souvenir de moi </label>
                                </div>
                                <a href="#">Mot de passe oubli√© ?</a>
                            </div>

                            <!-- btn let's go -->
                            <button type="submit" class="btn btn-primary btn-lg btn-block">Let's go !</button>

                        </form>
                    </div>
                </div>
            </div>
        </section>
    </form>
{% endblock %}