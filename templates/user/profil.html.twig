{% extends 'base.html.twig' %}

{%  block title %} Profil de {{ user.pseudo }} {%  endblock %}

{% block body %}
    <div class="card container mt-3 w-50">
        <h2 class="card-header" style="text-align: center"> {{ user.pseudo }}</h2>

        <!-- Image de profil -->
        <div class="card-body row-test">
            <div class="col">
                {% if user.photo != null %}
                    <img class="mx-auto d-block img-fluid rounded" src="data:image/png;base64,{{ photo }}" alt="Image de l'utilisateur">
                {% else %}
                    <img class="rounded" src="{{ asset('img/imageDefaut.png') }}" alt="Image par défaut de l'utilisateur">
                {% endif %}
            </div>
        </div>

        <div class="col">
            <!-- Prénom -->
            <div class="row mb-3">
                <h5 class="form-label" style="font-weight: bold"> Prénom </h5>
                <p class="col">{{ user.prenom }}
            </div>
            <!-- Nom -->
            <div class="row mb-3">
                <h5 class="form-label" style="font-weight: bold"> Nom </h5>
                <p class="col">{{ user.nom }}
            </div>
            <!-- Téléphone -->
            <div class="row mb-3">
                <h5 class="form-label" style="font-weight: bold"> Téléphone </h5>
                <p class="col">{{ user.telephone }}
            </div>
            <!-- Email -->
            <div class="row mb-3">
                <h5 class="form-label" style="font-weight: bold"> Email </h5>
                <p class="col">{{ user.email }}
            </div>
            <!-- Site de rattachement -->
            <div class="row mb-3">
                <h5 class="form-label" style="font-weight: bold"> Site de rattachement </h5>
                <p class="col">{{ user.site }}
            </div>
        </div>
        {% if user == userActual or is_granted('ROLE_ADMIN') %}
        <div class="container">
            <div class="text-center">
                <a href="{{ path('modification_profil', {id: user.id}) }}">
                    <button class="btn btn-primary">
                        Modifier le profil
                    </button>
                </a>
            </div><br>
        </div>
        {% endif %}
    </div><br>
{% endblock %}